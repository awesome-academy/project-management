<h1 id="task-<%= task.id %>">
  <%= task.name %>
  <small>
    <span class="timestamp">
    <%= t "task.open" %>
      <%= time_ago_in_words task.created_at %>
      <%= t "task.ago" %>
      <%= link_to t("task.delete"), project_task_url(@project, task), method: :delete,
        data: {confirm: t("task.delete_confirm")} %>
    </span>
  </small>
</h1>
