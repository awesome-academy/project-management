<div class="list-wrapper">
  <div class="list">
    <div class="list-header">
      <div class="list-header-target"></div>
      <textarea class="list-header-name mod-list-name list-name"
        aria-label="<%= task.name %>"
        spellcheck="false" dir="auto" maxlength="512">
        <%= task.name %>
      </textarea>
      <div class="list-header-extras">
        <%= link_to project_task_path(@project, task),
          class: "list-header-extras-menu dark-hover icon-lg",
          method: :delete , data: {confirm: t("task.delete_confirm")} do  %>
          <button class="btn btn-danger btn-xs">X</button>
        <% end %>
      </div>
      <p class="list-header-num-cards">
        <%= pluralize task.cards.count, t("card.card") %>
      </p>
    </div>
    <div class="list-cards">
      <% task.cards.each do |card| %>
        <%= render "tasks/card", {card: card} %>
      <% end %>
    </div>
    <%= link_to new_project_task_card_path(@project, task),
      class: "open-card-composer" do %>
      <span class="icon-sm glyphicon glyphicon-plus"></span>
      <span><%= t "card.add_card" %></span>
    <% end %>
  </div>
</div>
