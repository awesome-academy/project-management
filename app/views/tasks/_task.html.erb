<h1 class="text-left" id="task-<%= task.id %>">
  <%= task.name %>
  <small>
    <span class="timestamp">
    <%= t "task.open" %>
      <%= time_ago_in_words task.created_at %>
      <%= t "task.ago" %>
      <%= link_to t("task.delete"), project_task_url(@project, task), method: :delete,
        data: {confirm: t("task.delete_confirm")} %>
    </span>
  </small>
</h1>
<div class="row">
  <div><%= render task.cards %></div>
  <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
    <div class="card h-100">
      <%= link_to t("card.create"), new_project_task_card_path(@project, task), class: "btn btn-log btn-primary" %>
    </div>
  </div>
</div>
