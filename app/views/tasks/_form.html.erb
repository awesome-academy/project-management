<%= form_for [@project, @task] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_field :name, class: "form-control", placeholder: t("task.placeholder")%>
  </div>
  <%= f.submit t("task.create"), class: "btn btn-primary btn-block" %>
<% end %>

