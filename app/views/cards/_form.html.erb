<div class="col-md-6 col-md-offset-3">
  <%= form_for [@project, @task, @card] do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="field">
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.text_field :name, class: "form-control", placeholder: t("card.placeholder_name") %> <br>
      <%= f.text_area :describe, class: "form-control", placeholder: t("card.placeholder_describe") %>
    </div>
    <%= f.submit t("card.create"), class: "btn btn-primary btn-block" %>
  <% end %>
</div>
