<%= form_for [@card, @event] do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :event_type, value: "comment" %>
    <%= f.text_field :content, class: "form-control", placeholder: t("event.placeholder") %>
  </div>
  <%= f.submit t("event.create"), class: "btn btn-primary" %>
<% end %>
