<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :title %> | <%= t "static.body_tilte" %></title>
    <%= render "layouts/rails_default" %>
    <%= render "layouts/shim" %>
  </head>
  <body>
    <div id="wrapper" class="toggled">
      <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
          <li class="sidebar-brand">
            <%= link_to t("side_bar.dashboard"), projects_path %>
          </li>
          <li>
            <%= link_to t("side_bar.new_project"), new_project_path %>
          </li>
          <li>
            <%= link_to t("side_bar.sign_out"), logout_path, method: :delete %>
          </li>
        </ul>
      </div>
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <% flash.each do |message_type, message| %>
            <%= content_tag :div, message, class: "alert alert-#{message_type}" %>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
